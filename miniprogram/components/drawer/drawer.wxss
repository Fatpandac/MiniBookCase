.intro_top_init {
  opacity: 0;
  transform: translateY(100vh);
}

.intro_top {
  height: 100vh;
  width: 100%;
  top: 0px;
  position: fixed;
  z-index: 14;
  background: rgba(90, 86, 86, 0.247);
}

.introduction_init {
  transform: translateY(100vh);
}

.introduction_box {
  width: 100%;
  bottom: 0px;
  border-radius: 30px 30px 0px 0px;
  overflow: hidden;
  position: fixed;
  z-index: 15;
  background-color: rgb(255, 255, 255);
}

.cancel_bar {
  height: 10px;
  width: 20%;
  margin: 5px auto;
  border-radius: 25px;
  background-color: #adadad;
}

@import './drawer-wxa-auto-dark.wxss';
