.card {
  width: 95%;
  background-color: #f3f3f38c;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15px auto;
  border-radius: 15rpx;
}

.title {
  width: 95%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0px;
}

.title_text {
  font-size: 40rpx;
}

.switch_btn {
  width: 40%;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #d6d6d6c7;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;
}

.switch_btn .btn {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #cacaca;
  text-align: center;
  vertical-align: middle;
  position: absolute;
  left: 0px;
  transition: left ease 0.2s;
}

.charts_box {
  width: 100%;
  height: auto;
}

@import './statCard-wxa-auto-dark.wxss';
