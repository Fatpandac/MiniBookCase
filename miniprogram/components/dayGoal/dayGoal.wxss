.day_list {
  width: 100%;
  padding: 10px 0px;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border-bottom: 1px solid #f3f3f3;
}

.day_circle {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  position: relative;
  background-color: #c5c4c7;
  border-radius: 50%;
  text-align: center;
  vertical-align: middle;
}

.day_circle.active {
  background-color: #159cdc;
}

.link {
  width: 40%;
  position: absolute;
  border: 2px solid #159cdc;
  top: 50%;
  transform: translateY(-50%);
  right: -50%;
}

@import './dayGoal-wxa-auto-dark.wxss';
