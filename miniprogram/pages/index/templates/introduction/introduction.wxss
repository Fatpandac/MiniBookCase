.books_introduction {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.books_intro_image {
  width: 40%;
  height: 100%;
}

.books_base_info_box {
  width: 50%;
  height: 100%;
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.intro_text {
  font-size: 35rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  color: rgb(134, 134, 134);
}

.input_intro {
  height: 60rpx;
  width: 90%;
  border-radius: 10rpx;
  padding: 0px 5px;
  font-size: 35rpx;
  background-color: #f0f0f0;
}

.books_intro {
  height: 40%;
  width: 100%;
}

.books_intro_box {
  height: 75%;
  width: 90%;
  margin: 0 auto;
  border-radius: 10px;
  padding: 4px 0px 0px 4px;
  background-color: #f0f0f0;
}

.books_intro_botton_box {
  width: 100%;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
}

.books_intro_botton_left {
  float: left;
}

.books_intro_botton_right {
  float: right;
}

@import 'introduction-wxa-auto-dark.wxss';
