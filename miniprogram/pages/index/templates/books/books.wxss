.book_empty {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.book_empty_text {
  font-size: 70rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bolder;
  color: #6b6b6b;
}

.search_box {
  width: 90%;
  border-radius: 160rpx;
  margin: 20px auto 5px auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
  left: 5%;
  background-color: #7777770e;
}

.search_input {
  width: calc(100% - 110rpx);
  padding: 10rpx 10rpx 10rpx 20rpx;
}

.search_font {
  font-size: 10pt;
  color: #00000050;
}

.books_scroll_view {
  width: 100%;
  display: flex;
  flex-direction: column-reverse;
  align-items: center;
  background-color: #ffffff;
}

.animation_init {
  opacity: 0;
  transform: translateY(-100px);
}

.books_show_box {
  width: 90%;
  margin: 15px 0px;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 7px 10px #d9d9d9;
  position: relative;
  overflow: hidden;
  z-index: 1;
  background-color: #ffffff;
}

.books_show_box_hover {
  opacity: 0.9;
  background: #f7f7f7;
}

.slideview_box {
  width: 100%;
}

.show_base_info {
  height: 200rpx;
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: unset;
  align-items: center;
  z-index: 2;
}

.books_image {
  width: 145rpx;
  height: 190rpx;
}

.books_info_box {
  width: 65%;
  height: 100%;
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.books_position_text {
  height: 60rpx;
  width: 100%;
  font-size: 45rpx;
  line-height: 60rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bolder;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: black;
}

.books_name_text {
  height: 55rpx;
  width: 100%;
  font-size: 40rpx;
  line-height: 55rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #6b6b6b;
}

.books_author_text {
  height: 50rpx;
  width: 100%;
  font-size: 35rpx;
  line-height: 50rpx;
  font-family: Arial, Helvetica, sans-serif;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #cfcfcf;
}

/* 选择状态中圆圈未被选中 */
.round {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10px;
  border: 1px solid black;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0);
  transition: background 0.3s;
}

/* 底部空白view */
.blank_bottom_before {
  width: 100%;
  height: 5vh;
}

.blank_bottom_after {
  width: 100%;
  height: 10vh;
}

.weui-slideview__btn-group_default .no_sign {
  background-color: #c7c7cc;
  color: #ffffff;
}

.weui-slideview__btn-group_default .readed_btn {
  background: gold;
  color: #ffffff;
}

.weui-slideview__btn-group_default .reading_btn {
  background: #00da09;
  color: #ffffff;
}

@import 'books-wxa-auto-dark.wxss';
