.bottom_box {
  height: 70px;
  width: 100%;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: flex-start;
  position: fixed;
  z-index: 13;
  opacity: 0;
  transform: translateY(400px);
  /* 毛玻璃 */
  backdrop-filter: blur(10px);
  background: rgb(255, 255, 255, 0.6);
}

.bottom_button {
  background: #ffffff;
}

.bottom_cate_icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.bottom_cate_btn {
  height: 65%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 2;
}

.icon_delete_style {
  font-size: 50rpx;
  transition: color 0.3s;
}

.icon_addintocate_style {
  font-size: 50rpx;
  transition: color 0.3s;
}

.bottom_btn_text {
  color: black;
  font-size: 35rpx;
  line-height: 50rpx;
  transition: color 0.3s;
}

.bottom_del_btn {
  height: 65%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
}

.bottom_del_icon {
  width: 50rpx;
  height: 50rpx;
}

.cate_list {
  width: 100%;
  height: 100vh;
  top: 110vh;
  left: 0px;
  position: fixed;
  z-index: 16;
  background: white;
  border-radius: 25rpx;
  transition: top 0.5s;
}

.cate_list_title {
  width: 100vw;
  padding-bottom: 10px;
  border-bottom: 1px solid black;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.done_cate {
  margin-left: 15px;
  font-size: 20px;
  color: #00a3ff;
}

.cate_title {
  font-size: 40rpx;
}

.empty {
  margin-right: 15px;
  font-size: 20px;
  visibility: hidden;
}

.cate_item_box {
  height: 90rpx;
  display: flex;
  justify-content: left;
  align-items: center;
  border-bottom: 1px solid #cfcfcf85;
}

.cate_item_box_hover {
  border-radius: 25rpx 25rpx 0rpx 0rpx;
  opacity: 0.9;
  background: #f7f7f7;
  z-index: 14;
}

.cate_item_img {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx;
}

.cate_item_text {
  max-width: 50%;
  font-size: 30rpx;
  line-height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.cate_item_count {
  font-size: 30rpx;
  line-height: 50rpx;
  margin-left: 20rpx;
  color: #cfcfcf;
}

@import 'bottom-wxa-auto-dark.wxss';
